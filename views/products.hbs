<!-- products.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h2>Products</h2>

<br></br>

{{!-- Create a table --}}
<table id="products-table">
    {{!-- Header section --}}
    <thead>
        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <h2>Products</h2>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Plant ID</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the idProduct,name,price in order --}}
        {{#each data}}
        <tr data-value={{this.idProduct}}>            
            <td>{{this.idProduct}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.idPlant}}</td>
            <td><button onclick="deleteProduct({{this.idProduct}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_product.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Add New Product</h2>
<p>To add a new product, please enter the information below and click 'Submit'!</p>
<div class="form-style">
<form id="add-product-form-ajax">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name" required>
    
    <label for="input-price">Price: </label>
    <input type="number" min="0.00" max="999999.99" step="0.01" name="input-price" id="input-price" required>

    <input type="submit">
</form>
</div>
<br />
<script src="./js/add_product.js"></script>

<h2>Update A Product</h2>
<div class="form-style">
<form id="update-product-form-ajax">

    <label for="input-pname">Name: </label>
    <select name="input-pname" id="mySelect">
        <option value="test">Select a Product</option>
